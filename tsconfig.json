{
  "extends": "@tsconfig/node20/tsconfig.json",
  "ts-node": {
    "swc": true
  },
  "compilerOptions": {
    "noEmit": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "scripts/**/*.ts",
    "examples/**/*.ts",
    "rollup.config.ts"
  ]
}